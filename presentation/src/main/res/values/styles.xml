<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorDisabled">@color/colorDisabled</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--
        Global View Styles
    -->
    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="NoResultsFoundText" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PrimaryButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--
        Contacts list
    -->
    <style name="ContactSearchHint" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ContactSearchInput" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ContactUsername" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContactName" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite50</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--
        Priming Credit Card
    -->

    <style name="PrimingCreditCard" parent="ToolbarTitle">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PrimingCreditCardDescription" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite80</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--
        Create Credit Card
     -->

    <style name="CreateCreditCardEditText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--
        Payment Credit Card
     -->

    <style name="PaymentWhiteText" parent="ContactUsername">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PaymentEditCreditCard" parent="MoneySymbol">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Custom Money Input -->
    <style name="MoneySymbol" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite40</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="MoneyValue" parent="MoneySymbol">
        <item name="android:textSize">54sp</item>
    </style>

    <!-- Receipt Credit Card -->
    <style name="ReceiptCreditCard" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ReceiptCreditCardUsername" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ReceiptCreditCardTime" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite60</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ReceiptCreditCardTransactionNumber" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite40</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ReceiptCreditCardInfo" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ReceiptCreditCardTotal" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <attr format="color" name="colorDisabled"/>
</resources>
